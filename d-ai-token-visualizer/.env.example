# Azure OpenAI Configuration
# Copy this file to .env and fill in your actual values

# Your Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=your_endpoint_here

# Authentication Method 1: API Key (for local development)
# Your Azure OpenAI API key (optional if using Azure Default Credentials)
AZURE_OPENAI_API_KEY=your_api_key_here

# Authentication Method 2: Azure Default Credentials (recommended for production)
# Set to "true" to use Azure Default Credentials (AAD), "false" to use API key
USE_AZURE_DEFAULT_CREDENTIALS=true

# Your deployment name (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# API version (usually 2024-02-01 or newer for logprobs support)
AZURE_OPENAI_API_VERSION=2024-02-01

# Local LLM Configuration
# Copy this file to .env and fill in your actual values

# LLM Service Configuration
# URL of the local LLM service (FastAPI service running separately)
LLM_SERVICE_URL=http://localhost:8001

# Hugging Face Authentication (for the LLM service)
# 1. Go to: https://huggingface.co/settings/tokens
# 2. Create a new token with "Read" permissions
# 3. Accept Gemma 2 license at: https://huggingface.co/google/gemma-2-2b
HUGGINGFACE_TOKEN=your_hf_token_here

# Model Configuration (for the LLM service)
LOCAL_MODEL_NAME=google/gemma-2-2b
DEVICE=auto
USE_QUANTIZATION=true
